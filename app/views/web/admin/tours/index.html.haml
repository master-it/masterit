= link_to t('.new'), new_admin_tour_path, class: 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th= sort_link @q, :id
      %th= sort_link @q, :name
      %th= sort_link @q, :state
      %th
  %tbody
    - @tours.each do |item|
      %tr
        %td= item.id
        %td= item.name
        %td= item.human_state_name
        %td
          .pull-right.btn-group
            = link_to edit_admin_tour_path(item), :class => 'btn btn-mini' do
              %i.icon-pencil
            = link_to admin_tour_path(item), method: :delete, data: { confirm: t('.confirm') }, class: 'btn btn-mini btn-danger' do
              %i.icon-trash

= paginate @tours

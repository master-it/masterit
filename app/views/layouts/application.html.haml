!!! 5
%html(lang="ru")
  = render 'layouts/web/shared/head'
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="#") Masterit
          .container.nav-collapse
            %ul.nav.pull-right

              - if user_signed_in?
                - if current_user.role? :admin
                  %li= link_to "Админка", admin_root_path
                
                %li= link_to "#{current_user.email}", user_path(current_user)
                %li= link_to "Выход", destroy_user_session_path, :method => :delete
                %li= link_to "Привязать facebook", user_omniauth_authorize_path(:facebook)
                %li= link_to "Привязать google", user_omniauth_authorize_path(:google_oauth2)
                %li= link_to "Привязать twitter", user_omniauth_authorize_path(:twitter)
                %li= link_to "Привязать vkontakte", user_omniauth_authorize_path(:vkontakte)
              -else
                %li= link_to "Вход", new_user_session_path


    .container
      .content
        = bootstrap_flash
        = yield


      = render 'layouts/web/shared/footer'

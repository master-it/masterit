!!! 5
%html(lang="ru")
  = render 'layouts/web/shared/head'
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="#") Masterit
          .container.nav-collapse
            %ul.nav.pull-right
              - nav_menu_items_arrange.each_pair do |menu_item, children|
                - if children.any?
                  %li.dropdown
                    %a.dropdown-toggle{ data: {toggle: 'dropdown'}, href: '#' }
                      = menu_item.title
                      %b.caret
                    %ul.dropdown-menu
                      - children.each_key do |sub_item|
                        = item :li, sub_item.title, page_path(sub_item.pages.first)
                - else
                  = item :li, menu_item.title, page_path(menu_item.pages.first)
              - if user_signed_in?
                - if current_user.role? :admin
                  %li= link_to "Админка", admin_root_path
                
                %li= link_to "#{current_user.email}", user_path(current_user)
                %li= link_to "Выход", destroy_user_session_path, :method => :delete
              - else
                %li= link_to "Вход", new_user_session_path

    .container
      .content
        = bootstrap_flash
        = yield


      = render 'layouts/web/shared/footer'
